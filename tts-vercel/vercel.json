{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "api/index.js"
    },
    {
      "src": "/tts",
      "dest": "api/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/tts?format=base64",
      "dest": "api/index.js",
      "methods": ["POST"]
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
}
